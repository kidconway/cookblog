extends layout

block content
  .login-reg-cover
    .container
      .d-flex.justify-content-center.h-100
        .card.login-card
          .card-header
            h3 Sign In
            .d-flex.justify-content-end.social_icon
              span
                i.fab.fa-facebook-square
              span
                i.fab.fa-twitter-square
          .card-body
            form(action='/login' method='POST')
              .input-group.form-group
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-user
                input.form-control(type='text' name='username' placeholder='username')
              .input-group.form-group
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-key
                input.form-control(type='password' name='password' placeholder='password')
              .row.align-items-center.remember
                input(type='checkbox' id='remember-me')
                label(for='remember-me') Remember Me
              .form-group
                input.btn.float-right.login_btn(type='submit' value='Login')
          .card-footer
            .d-flex.justify-content-center.links
              p Don't have an account?
              a(href='/register') Sign Up
            .d-flex.justify-content-center
              a(href='/') Forgot your password?
                  
              
              
